---
interface Props {
  as?: "div" | "article" | "section" | "li" | "blockquote";
}

const { as: Tag = "div" } = Astro.props;
---

<Tag class="card">
  <slot />
</Tag>

<style>
  .card {
    border: 1px solid var(--border-primary);
    border-radius: var(--card-border-radius);
    background-color: var(--surface-secondary);
    padding: var(--card-padding);
  }
</style>
